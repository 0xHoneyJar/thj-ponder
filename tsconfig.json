{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/generated": ["./.ponder/src/generated"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".ponder/src/generated/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".ponder/cache",
    ".ponder/sqlite"
  ]
}